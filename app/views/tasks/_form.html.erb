<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: 'Laundry' %>
  <%= f.label :details %>
  <%= f.text_field :details, placeholder: '' %>
  <% unless (@task.new_record?) %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  <% end %>
  <%= f.submit %>
<% end %>
